<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <act_window
            name="Stock Moves"
            id="analytic_account_stock_move"
            res_model="stock.move"
            src_model="account.analytic.account"
            context="{'default_analytic_account_id': active_id,'search_default_analytic_account_id': [active_id]}"
            groups="analytic.group_analytic_accounting"/>


        <record id="view_account_analytic_account_form_stock_move" model="ir.ui.view">
            <field name="name">account.analytic.account.form.stock.move</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="buttons"]' position='inside'>
                    <button help="Stock Moves"
                        class="oe_inline oe_stat_button"
                        name="%(analytic_account_stock_move)d"
                        type="action"
                        icon="fa-exchange"
                        context="{'default_analytic_account_id': active_id,'search_default_analytic_account_id': [active_id]}"
                        groups="analytic.group_analytic_accounting">
                        <div>Stock Moves</div>
                    </button>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Stock" name="stock">
                        <group>
                            <label for="move_ids"/>
                            <field name="move_ids" nolabel="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_account_analytic_account_form_stock_move2" model="ir.ui.view">
            <field name="name">account.analytic.account.form.stock.move2</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="after">
                    <field name="use_reserved_stock"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
